<Page>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition width="15" />
            <ColumnDefinition width="40" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition height="30" />
            <RowDefinition height="30" />
            <RowDefinition height="30" />
            <RowDefinition height="30" />
        </Grid.RowDefinitions>

        <TextBlock Grid.row="0" Grid.column="0" padding="5,0" text="Phrase: " />
        <InputBox Grid.row="0" Grid.column="1" width="30" x_Name="phrase_input"/>

        <TextBlock Grid.row="1" Grid.column="0" padding="5,0" text="Tags (comma-separacted)" />
        <InputBox Grid.row="1" Grid.column="1" width="30" x_Name="tag_input"/>

        <Button Grid.row="3" Grid.column="0" text="Close" padding="0" click="close"/>
        <Button Grid.row="3" Grid.column="1" text="Add Quote" padding="0" click="add_new_quote"/>
    </Grid>
</Page>