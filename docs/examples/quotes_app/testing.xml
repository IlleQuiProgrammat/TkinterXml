<Page>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition width="150" />
            <ColumnDefinition width="1000" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition height="60" />
            <RowDefinition height="750" />
        </Grid.RowDefinitions>

        <!-- Greeting -->
        <TextBlock Grid.row="0" Grid.column="0" text="Hello" font_size="32" />
        
        <!-- List of collections -->
        <Grid Grid.row="1" Grid.column="0" x_Name="collection_grid">
            <Grid.RowDefinitions x_Name="collection_grid_rowdefinitions">
                <RowDefinition height="30" />
                <RowDefinition height="30" />
                <RowDefinition height="30" />
            </Grid.RowDefinitions>
        </Grid>

        <!-- Title, progress, test button, and new quote button -->
        <Grid Grid.row="0" Grid.column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition width="*" />
                <ColumnDefinition width="*" />
                <ColumnDefinition width="*" />
            </Grid.ColumnDefinitions>
            <Button Grid.column="0" click="add_quote" text="New Quote" padding="0" />
            <TextBlock Grid.column="1" x_Name="title" text="Please select a collection" font_size="32" />
            <Button Grid.column="2" click="run_test" text="Test!" padding="0" />
        </Grid>
        
        <!-- List of quotes -->
        <Grid Grid.row="1" Grid.column="1" x_Name="quote_grid">
        <Grid.RowDefinitions x_Name="quote_grid_rowdefinitions">
        </Grid.RowDefinitions>
        </Grid>
    </Grid>
</Page>