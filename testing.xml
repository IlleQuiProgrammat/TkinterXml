<Page>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition width="150" />
            <ColumnDefinition width="1000" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition height="60" />
            <RowDefinition height="750" />
        </Grid.RowDefinitions>

        <!-- Greeting -->
        <TextBlock Grid.row="0" Grid.column="0" text="Hello, Nathan" font_size="32" />
        
        <!-- List of collections -->
        <Grid Grid.row="1" Grid.column="0">
            <Grid.RowDefinitions>
                <RowDefinition height="30" />
                <RowDefinition height="30" />
                <RowDefinition height="30" />
            </Grid.RowDefinitions>
            <Button Grid.row="0"
                    text="Collection 1"
                    font_size="16"
                    click="change_collection"
                    width="15" />
            <Button Grid.row="1" text="Collection 2" font_size="16" click="change_collection" width="15" />
            <Button Grid.row="2" text="Collection 3" font_size="16" click="change_collection" width="15" />
            <Button Grid.row="3" text="Collection 4" font_size="16" click="change_collection" width="15" />
        </Grid>

        <!-- Title, progress, test button, and new quote button -->
        <Grid Grid.row="0" Grid.column="1">
            <TextBlock Grid.row="0" Grid.column="0" x_Name="title" text="Hello, Nathan" font_size="32" />
        </Grid>
        
        <!-- List of quotes -->
        <Grid Grid.row="1" Grid.column="1">
            <QuoteElement quote_text="I dare do all that may become a man; / Who dares do more is none." />
        </Grid>
    </Grid>
</Page>